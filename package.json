{
  "name": "digitalocean-doorkeeper",
  "description": "This Github action allows you to open or close an specific port in your DigitalOcean firewall. It's really useful for deploy in your instances from Github Actions, as they don't provide a list of IPs to add to your security groups.",
  "version": "1.0.0",
  "author": "Jorge Maroto (@patoroco)",
  "license": "MIT",
  "private": false,
  "homepage": "https://github.com/patoroco/doorkeeper",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/patoroco/doorkeeper.git"
  },
  "bugs": "https://github.com/patoroco/doorkeeper/issues",
  "keywords": [
    "actions",
    "node",
    "digitalocean"
  ],
  "exports": {
    ".": "./dist/index.js"
  },
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "bundle": "npm run format:write && npm run package",
    "format:write": "prettier --write **/*.ts",
    "package": "ncc build src/index.ts --license licenses.txt"
  },
  "oldScripts": {
    "local": "ts-node src/main.ts",
    "local:action": "npm run pack && act -j local -s DO_TOKEN",
    "pack": "ncc build",
    "test": "jest",
    "test:watch": "jest --watchAll"
  },
  "jest": {
    "preset": "ts-jest",
    "verbose": true,
    "clearMocks": true,
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "testMatch": [
      "**/*.test.ts"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "coverageReporters": [
      "json-summary",
      "text",
      "lcov"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "./src/**"
    ]
  },
  "dependencies": {
    "@actions/core": "^1.10.1"
  },
  "devDependencies": {
    "typescript": "^5.2.2",
    "prettier": "^3.0.3",
    "@vercel/ncc": "^0.38.0"
  },

  "oldDependencies": {
    "@actions/core": "^1.6.0",
    "@actions/github": "^4.0.0",
    "@types/node-fetch": "^2.5.12",
    "dots-wrapper": "^3.6.2",
    "node-fetch": "^2.6.7",
    "follow-redirects": ">=1.14.7"
  },
  "oldDevDependencies": {
    "@types/jest": "^26.0.24",
    "@types/node": "^14.18.9",
    "@typescript-eslint/parser": "^4.33.0",
    "@zeit/ncc": "^0.22.3",
    "eslint": "^7.32.0",
    "eslint-plugin-github": "^4.3.5",
    "eslint-plugin-jest": "^23.20.0",
    "jest": "^26.6.3",
    "jest-circus": "^26.6.3",
    "jest-fetch-mock": "^3.0.3",
    "prettier": "^2.5.1",
    "ts-jest": "^26.5.6",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.10"
  }
}
